{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build (Debug)",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "main.cpp",
                "-lcurl",
                "-ljsoncpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I",
                "/home/christian/Documents/own_code/c++/DataScience/NeuralNet/",
                "-I",
                "/usr/local/include/opencv4/",
                "-lopencv_core",
                "-lopencv_imgcodecs",
                "-lopencv_videoio",
                "-lopencv_imgproc",
                "-lopencv_highgui",
                "-lgstreamer-1.0",
                "-lpthread",
                "-L/usr/local/lib",
                "-Wl,-rpath,/usr/local/lib",                
                "-std=c++17"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"/*,
                "isDefault": true*/
            },
            "detail": "compiler: /usr/bin/g++"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build (Release)",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-O2",
                "main.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I",
                "/home/christian/Documents/own_code/c++/DataScience/NeuralNet/",
                "-I",
                "/usr/local/include/opencv4/",
                "-lopencv_core",
                "-lopencv_imgcodecs",
                "-lopencv_videoio",
                "-lopencv_imgproc",
                "-lopencv_highgui",
                "-lgstreamer-1.0",
                "-lpthread",
                "-L/usr/local/lib",
                "-Wl,-rpath,/usr/local/lib",                
                "-std=c++17"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                        "kind": "build",
                        "isDefault": true
                    },
            "detail": "compiler: /usr/bin/g++"
        }
    ]
