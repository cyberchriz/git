// BUILD DEBUG VERSION
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: g++ build active file",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++11",
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/DataScience/neuralnet/MLP/sources/test.cpp",
                "${workspaceFolder}/DataScience/neuralnet/MLP/headers/layer.h",
                "${workspaceFolder}/DataScience/neuralnet/MLP/headers/network.h",
                "${workspaceFolder}/DataScience/neuralnet/MLP/headers/neuron.h",
                "${workspaceFolder}/DataScience/neuralnet/activation_functions.h",
                "${workspaceFolder}/DataScience/neuralnet/weight_init.h",
                "${workspaceFolder}/DataScience/distributions/sources/random_distributions.cpp",
                "${workspaceFolder}/DataScience/distributions/headers/random_distributions.h"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger.",
            "output": "${workspaceFolder}/DataScience/neuralnet/MLP/sources/executable"
        }
    ]
}

