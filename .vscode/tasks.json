{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: g++ build active file",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++23",
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/DataScience/distributions/sources/random_distributions.cpp",
                "${workspaceFolder}/DataScience/neuralnet/MLP/sources/mlp.cpp",
                "${workspaceFolder}/DataScience/neuralnet/MLP/sources/test.cpp",
                "-o",
                "${workspaceFolder}/DataScience/neuralnet/MLP/sources/executable",
                "-lboost_stacktrace_backtrace",
                "-lstacktrace",
                "-lstdc++-10",
                "-lgcc-10"
            ],            
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
